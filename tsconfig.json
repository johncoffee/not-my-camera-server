{
  "compilerOptions": {
    "module": "commonjs",

    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    "diagnostics": true,
    "noEmitHelpers": true,

    "preserveConstEnums": true,
    "target": "ES6",
    "sourceMap": false,
    "pretty": true,

    "noEmitOnError": true
  },
  "exclude": [
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser"
  ]
}
